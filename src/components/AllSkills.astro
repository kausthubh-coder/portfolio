---
const allSkills = [
  "JavaScript", "Python", "React", "Node.js", "GraphQL", "Docker",
  "AWS", "MongoDB", "SQL", "Git", "CI/CD", "Agile Methodologies",
  // Add more skills
];
---

<div class="card">
  <h3 class="text-lg font-semibold mb-4">All Skills</h3>
  <div class="flex flex-wrap gap-2">
    {allSkills.map((skill) => (
      <span class="bg-[var(--bg-dark)] px-2 py-1 rounded text-sm">{skill}</span>
    ))}
  </div>
</div>
