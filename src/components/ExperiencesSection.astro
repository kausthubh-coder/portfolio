---
const experiences = [
  {
    role: "Senior Software Engineer",
    company: "Tech Corp",
    period: "2021 - Present",
    description: "Led development of microservices architecture, mentored junior developers, and implemented CI/CD pipelines.",
    technologies: ["Node.js", "React", "Docker", "AWS"]
  },
  {
    role: "Full Stack Developer",
    company: "Digital Solutions Inc",
    period: "2019 - 2021",
    description: "Developed and maintained web applications, collaborated with design team, and optimized database performance.",
    technologies: ["Python", "Django", "PostgreSQL", "Vue.js"]
  },
  {
    role: "Frontend Developer",
    company: "WebTech Startup",
    period: "2017 - 2019",
    description: "Built responsive user interfaces, implemented state management, and improved site performance.",
    technologies: ["JavaScript", "React", "Redux", "SASS"]
  }
];
---

<section class="mb-16">
  <div class="mb-4">
    <h2 class="text-3xl font-bold">Experience</h2>
  </div>
  <div class="space-y-6">
    {
      experiences.map((experience) => (
        <div class="border-l-2 border-gray-200 pl-4">
          <h3 class="text-xl font-semibold">{experience.role}</h3>
          <p class="text-gray-600">{experience.company} | {experience.period}</p>
          <p class="mt-2">{experience.description}</p>
          <div class="mt-2 flex flex-wrap gap-2">
            {experience.technologies.map((tech) => (
              <span class="bg-gray-100 px-2 py-1 rounded text-sm">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</section>
